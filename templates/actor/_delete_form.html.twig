<form method="post" action="{{ path('actor_delete', {'id': actor.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet acteur?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actor.id) }}">
    <button class="submit">Supprimer</button>
</form>
