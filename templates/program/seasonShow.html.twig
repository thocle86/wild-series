{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <a href="{{ path('program_show', { 'idProgram': program.id }) }}" class="navigation">Retour à la liste des saisons</a>
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <h2>Saison n°{{ season.number }} / Première diffusion: {{ season.year }}</h2>
            {% for episode in season.episodes %}
            <div class="program_container">
                <p class="program_text">Episode n°{{ episode.number }} - {{ episode.title }}</p>
                <a href="{{ path('program_episode_show', { 'idProgram': program.id, 'idSeason': season.number, 'idEpisode': episode.number }) }}" class="program_lien">Plus de détails</a>
            </div>
            {% else %}
                Aucun épisode trouvé.
            {% endfor %}
        </div>
    </div>
{% endblock %}
