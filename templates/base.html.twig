<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Wild Series!{% endblock %}</title>
        <link rel="icon" href="{{ asset('build/favicon.ico') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
        {% include "_navbar.html.twig" %}
        </header>
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ category }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% if app.user %}
            <h1>Editer</h1>
            <a href="{{ path('category_new') }}" class="navigation">Catégorie</a>
            <a href="{{ path('program_list') }}" class="navigation">Série</a>
            <a href="{{ path('season_index') }}" class="navigation">Saison</a>
            <a href="{{ path('episode_index') }}" class="navigation">Episode</a>
            <a href="{{ path('actor_index') }}" class="navigation">Acteurs</a>
        {% endif %}
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
    </body>
</html>
